<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="0" author="d1snin (me@d1s.dev)">
        <createSequence incrementBy="1" sequenceName="system-uuid" startValue="1"/>

        <createTable tableName="availability_change">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_availability_change"/>
            </column>
            <column name="creation_time" type="DATETIME"/>
            <column name="short_link_id" type="VARCHAR(255)"/>
            <column name="unavailability_reason" type="INT"/>
        </createTable>

        <createTable tableName="redirect">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_redirect"/>
            </column>
            <column name="creation_time" type="DATETIME"/>
            <column name="short_link_id" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="template_variable">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_template_variable"/>
            </column>
            <column name="creation_time" type="DATETIME"/>
            <column name="variable_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="variable_value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="redirect_id" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="redirect_utm_parameter">
            <column name="redirect_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_redirect_utm_parameter"/>
            </column>
            <column name="utm_parameter_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_redirect_utm_parameter"/>
            </column>
        </createTable>

        <createTable tableName="short_link">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_short_link"/>
            </column>
            <column name="creation_time" type="DATETIME"/>
            <column name="alias" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="target" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="alias_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="allow_utm_parameters" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="allow_redirects" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="max_redirects" type="INT"/>
            <column name="delete_after" type="BIGINT"/>
        </createTable>

        <createTable tableName="short_link_allowed_utm_parameter">
            <column name="short_link_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_short_link_allowed_utm_parameter"/>
            </column>
            <column name="utm_parameter_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_short_link_allowed_utm_parameter"/>
            </column>
        </createTable>

        <createTable tableName="short_link_default_utm_parameter">
            <column name="short_link_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_short_link_default_utm_parameter"/>
            </column>
            <column name="utm_parameter_id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_short_link_default_utm_parameter"/>
            </column>
        </createTable>

        <createTable tableName="utm_parameter">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_utm_parameter"/>
            </column>
            <column name="creation_time" type="DATETIME"/>
            <column name="type" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="parameter_value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="allow_override" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint columnNames="alias" constraintName="uc_short_link_alias" tableName="short_link"/>

        <addForeignKeyConstraint baseColumnNames="short_link_id" baseTableName="availability_change"
                                 constraintName="FK_AVAILABILITY_CHANGE_ON_SHORTLINK" referencedColumnNames="id"
                                 referencedTableName="short_link"/>

        <addForeignKeyConstraint baseColumnNames="short_link_id" baseTableName="redirect"
                                 constraintName="FK_REDIRECT_ON_SHORTLINK" referencedColumnNames="id"
                                 referencedTableName="short_link"/>

        <addForeignKeyConstraint baseColumnNames="redirect_id" baseTableName="redirect_utm_parameter"
                                 constraintName="fk_redutmpar_on_redirect" referencedColumnNames="id"
                                 referencedTableName="redirect"/>

        <addForeignKeyConstraint baseColumnNames="utm_parameter_id" baseTableName="redirect_utm_parameter"
                                 constraintName="fk_redutmpar_on_utm_parameter" referencedColumnNames="id"
                                 referencedTableName="utm_parameter"/>

        <addForeignKeyConstraint baseColumnNames="short_link_id" baseTableName="short_link_allowed_utm_parameter"
                                 constraintName="fk_sholinallutmpar_on_short_link" referencedColumnNames="id"
                                 referencedTableName="short_link"/>

        <addForeignKeyConstraint baseColumnNames="utm_parameter_id" baseTableName="short_link_allowed_utm_parameter"
                                 constraintName="fk_sholinallutmpar_on_utm_parameter" referencedColumnNames="id"
                                 referencedTableName="utm_parameter"/>

        <addForeignKeyConstraint baseColumnNames="short_link_id" baseTableName="short_link_default_utm_parameter"
                                 constraintName="fk_sholindefutmpar_on_short_link" referencedColumnNames="id"
                                 referencedTableName="short_link"/>

        <addForeignKeyConstraint baseColumnNames="utm_parameter_id" baseTableName="short_link_default_utm_parameter"
                                 constraintName="fk_sholindefutmpar_on_utm_parameter" referencedColumnNames="id"
                                 referencedTableName="utm_parameter"/>
    </changeSet>
</databaseChangeLog>